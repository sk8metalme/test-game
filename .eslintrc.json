{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true,
    "node": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_", "varsIgnorePattern": "^_" }],
    "no-console": "warn",
    "prefer-const": "error",
    "no-var": "error",
    "eqeqeq": "error",
    "no-implicit-globals": "error",
    "no-shadow": "warn"
  },
  "overrides": [
    {
      "files": ["tests/**/*.js"],
      "rules": {
        "no-unused-vars": "warn"
      }
    }
  ]
}
