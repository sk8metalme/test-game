{
  "name": "tetris-ai-game",
  "version": "1.0.0",
  "description": "Tetris Generation AI Game",
  "main": "src/presentation/main.js",
  "scripts": {
    "test": "jest --testPathIgnorePatterns=e2e",
    "test:e2e": "jest --config tests/e2e/config/jest-e2e.config.js",
    "test:e2e:basic": "jest --config tests/e2e/config/jest-e2e.config.js tests/e2e/tests/01-game-initialization.e2e.test.js",
    "test:e2e:ci": "HEADLESS=true CI=true jest --config tests/e2e/config/jest-e2e.config.js",
    "test:fast": "jest --testPathIgnorePatterns=tests/performance/",
    "test:performance": "jest --config jest.performance.config.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "dev": "webpack serve --mode development",
    "build": "webpack --mode production",
    "lint": "eslint src tests",
    "format": "prettier --write src tests",
    "prepare": "husky"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.56.0",
    "express": "^5.1.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.1.1",
    "jsdom": "^23.0.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.1.0",
    "puppeteer": "^24.18.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.0",
    "webpack-dev-server": "^4.15.0"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "tests/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  }
}
